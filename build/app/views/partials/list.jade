.col-md-12.col-sm-12.col-xs-12
  // 自分のリスト一覧
  // TODO: デザインを統一(search boxっぽく、)
  select(ng-model='sourceListData', ng-options='l.full_name for l in ownList')

  // TODO: Smartphoneでは、セレクトボックスの横に、Copyボタンを置く(上部はここ)

.col-md-5.col-sm-12.col-xs-12
  h3(ng-if="sourceList.members")
    a.external-link(href='https://twitter.com/{{user.username}}/lists/{{sourceList.name}}', target='_blank')
      {{sourceList.name}} ({{sourceList.countChecked}}人)

  // TODO: 読み込み中のloader

  .scrollable.stylish-scrollbar.list-member__container(ng-if="sourceList.members")
    div(ng-repeat="member in sourceList.members")
      .media
        a.pull-left(twitter-id-str="{{member.id_str}}", show-tweet="show-tweet")
          img.media-object.thumbnail-img.fade(ng-src='{{member.profile_image_url}}', img-preload="img-preload")
        .media-body
          h4.media-heading
            span.name {{member.name}}
            span.screen-name @{{member.screen_name}}
          // TODO: 追加するか否かのチェックボックスをここに置く。
      .member__divider

  //- pre
  //-   {{sourceList|json}}
  //- pre
  //-   {{sourceListData|json}}
  //- pre
  //-   {{ownList|json}}

// TODO: 読み込みが完了するまで、copy-masterはdisabledにする。(directiveに書くのかな？)
.col-md-2.hidden-sm.hidden-xs
  .list__controlls--copy(ng-if="sourceList.members")
    .list__controlls--copy--icon(source-list='sourceList', copy-member)


