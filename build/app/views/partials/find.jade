dot-loader.user-sidebar__contents--box-loading-init(ng-if='pictList.items/length == 0')

.col-md-12.col-sm-12.col-xs-12

  .list-member__container(infinite-scroll='pictList.load()',infinite-scroll-distance='0')
    div(ng-repeat="pict in pictList.items")
      .row
        .col-sm-12
          .media
            a.pull-left(twitter-id-str="{{pict.postedBy.twitterIdStr}}", show-tweet="show-tweet")
              img.media-object.thumbnail-img.fade(ng-src='{{pict.postedBy.icon}}', img-preload="img-preload")
            .media-body
              h4.media-heading
                span.name {{pict.postedBy.name}}
                span.screen-name @{{pict.postedBy.screenName}}
              a.link(href='{{pict.postedBy.url}}', target='_blank') {{pict.postedBy.url}}
      .row.find__pict-tweet--container
        .col-xs-6.col-sm-2.col-md-2(ng-repeat="pictTweet in pict.pictTweetList | limitTo: 6")
          img.img-responsive.fade(ng-src='{{pictTweet.mediaUrl}}:small', img-preload="img-preload", zoom-image="zoom-image", data-img-src="{{pictTweet.mediaUrl}}")
      .member__divider
