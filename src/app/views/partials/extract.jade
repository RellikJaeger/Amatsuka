.row
  .col-md-6
    form(name="extractForm")
      .form-group
        label(for='screenName') Screen Name
        .input-group.input-group-sm.extract-form
          span.input-group-addon @
          input#screenName.form-control.search-input(type='text', name='screenName', placeholder='(ex) shiratamacaron', ng-model="filter.screenName", ng-disabled="isLoading", required)

      .form-group
        label(for='filterKeyword') Filter Keyword
        .input-group.input-group-sm.extract-form
          span.input-group-addon
            i.fa.fa-font
          input#filterKeyword.form-control.search-input(type='text', placeholder='(ex) ご注文はうさぎですか？、ごちうさ、ゆるゆり、九条カレン', ng-model="filter.keyword", ng-disabled="isLoading")

      .checkbox
        label
          input(type='checkbox', ng-model='filter.isIncludeRetweet', ng-disabled="isLoading")
          | Include Retweet
      button.btn.btn-default(type='button', ng-click='execFilteringPictWithKeyword()', ng-disabled="isLoading || extractForm.screenName.$error.required") Filter Start

  .extract__form-profile-between-padding

  .col-md-6
    .media(ng-if='extract.user.name')
      .media
        a.pull-left
          img.media-object.thumbnail-img.fade(ng-src='{{extract.user.profile_image_url_https}}', img-preload="img-preload", show-tweet="show-tweet", twitter-id-str="{{extract.user.id_str}}")
        .media-body
          h4.media-heading
            span.name {{extract.user.name}}
            span.screen-name @{{extract.user.screen_name}}
          span.btn-wrapper
          a.btn.btn-sm.btn-follow(followable, follow-status='extract.user.followStatus', list-id-str='{{listIdStr}}', twitter-id-str='{{extract.user.id_str}}')

      .media-body.extract__profile--bio
        .extract__profile--description(ng-bind-html='extract.user.description | newlines')
        .user-sidebar__profile--url(ng-hide="extract.user.url == null")
          i.fa.fa-link
          a(href="{{extract.user.url}}", target="_blank") {{extract.user.url}}


.timeline__container
  .section--divider

  .timeline.timeline--tile(ng-if='layoutType == "tile"')
    .timeline__post.timeline__post--tile.col-lg-2.col-md-3.col-sm-4(ng-repeat='tweet in extract.tweets')
      include ../parts/post/_tile
    dot-loader.user-sidebar__contents--infinitescroll-message(ng-if='isLoading')

  .timeline.timeline--grid(ng-if='layoutType == "grid"', masonry='masonry', preserve-order)
    .masonry-brick.timeline__post.timeline__post--grid(ng-repeat='tweet in extract.tweets')
      include ../parts/post/_grid
    dot-loader.user-sidebar__contents--infinitescroll-message(ng-if='isLoading')